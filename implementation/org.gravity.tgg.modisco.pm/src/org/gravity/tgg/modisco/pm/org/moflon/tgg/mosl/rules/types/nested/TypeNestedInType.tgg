#using org.gravity.tgg.modisco.pm.*
#using AttrCondDefLibrary.*

#rule NestedEnumInType
#extends TypeNestedInType_Abstract
#with org.gravity.tgg.modisco.pm

#source {
	++eNestedType:EnumDeclaration
}

#target {
	typeGraph:TypeGraph {
		++  -classes -> tNestedType
	}

	tOuterPackage:TPackage {
		++  -classes -> tNestedType
	}

	++tNestedType:TClass {
		++-tAnnotation -> tEnum
	}

	++tEnum:TEnum
}


